<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>Blogify - Blog</title>
</head>
<body class="bg-light">

    <%- include("./partials/nav") %>

    <!-- Blog Content -->
    <div class="container my-5">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">

                <h1 class="card-title fw-bold mb-3"><%= blog.title %></h1>

                <div class="text-center mb-4">
                    <img 
                        src="<%= blog.coverImageURL %>" 
                        class="img-fluid rounded shadow-sm"
                        style="max-height: 400px; object-fit: cover;"
                    >
                </div>

                <p class="card-text fs-5 lh-lg text-secondary">
                    <%= blog.body %>
                </p>

            </div>
        </div>
    </div>

    <!-- Author Section -->
    <div class="container mb-4">
        <div class="d-flex align-items-center gap-3 p-3 bg-white rounded shadow-sm">
            <a href="/<%= blog.createdBy._id %>">
                <img 
                    src="<%= blog.createdBy.profileImage %>" 
                    class="rounded-circle border"
                    width="40"
                    height="40"
                    style="object-fit: cover;"
                >
            </a>
            <div>
                <small class="text-muted">Uploaded By</small>
                <h6 class="mb-0 fw-semibold"><%= blog.createdBy.fullName %></h6>
            </div>
        </div>
    </div>

    <hr class="container">

    <!-- Comments Section -->
    <div class="container mb-5">
        <h3 class="fw-bold mb-4">Comments</h3>

        <% if (locals.user) { %>
            <div class="card mb-4 shadow-sm border-0">
                <div class="card-body">
                    <form method="post" action="/blog/comment/<%= blog.id %>">
                        <div class="form-floating mb-3">
                            <input 
                                type="text" 
                                class="form-control" 
                                id="floatingTextarea" 
                                name="comment" 
                                maxlength="200"
                                placeholder="Write a comment..."
                            >
                            <label for="floatingTextarea">Write a comment</label>
                        </div>
                        <button class="btn btn-primary px-4" type="submit">
                            Add Comment
                        </button>
                    </form>
                </div>
            </div>
        <% } %>

        <!-- Comments List -->
        <% comments.forEach(comment => { %>
            <div class="card mb-3 shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3 mb-2">
                        <a href="/<%= comment.commentedBy._id %>">
                            <img 
                                src="<%= comment.commentedBy.profileImage %>" 
                                class="rounded-circle border"
                    width="40"
                    height="40"
                    style="object-fit: cover;"
                            >
                        </a>
                        <h6 class="mb-0 fw-semibold">
                            <%= comment.commentedBy.fullName %>
                        </h6>
                    </div>

                    <p class="mb-0 ms-5 text-secondary">
                        <%= comment.content %>
                    </p>
                </div>
            </div>
        <% }) %>

    </div>

    <%- include("./partials/scripts") %>
</body>
</html>
