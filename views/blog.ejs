<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>Blogify-Blog</title>
</head>
<body>
    <%- include("./partials/nav") %>

    <div class="container m-3">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" width="700px">
        <pre><%= blog.body %></pre>
    </div>
    <div class="container">
        <p> Uploaded By </p>
        <a href="/<%= blog.createdBy._id %>"><img src="<%= blog.createdBy.profileImage %>" width="50px" class="d-inline-flex rounded-circle"></a>
        <h6 class="d-inline-flex"><%= blog.createdBy.fullName %></h6>
        </div>
    <hr>
    <h3 class="ms-3">Comments</h3>
    <% if (locals.user) { %>
        <form method="post" action="/blog/comment/<%= blog.id %>">
        <div class="form-floating m-4 mb-0">
            <input type="text" class="form-control" id="floatingTextarea" name="comment" maxlength="200">
            <label for="floatingTextarea">Comment</label>
        </div>
        <div class="col-12 m-4 mt-2">
            <button class="btn btn-primary" type="submit">Add</button>
        </div>
        </form>
    <% } %>

    <% comments.forEach(comment => { %>
        <div class="container">
        <a href="/<%= comment.commentedBy._id %>"><img src="<%= comment.commentedBy.profileImage %>" width="50px" class="d-inline-flex rounded-circle"></a> 
        <h6 class="d-inline-flex"><%= comment.commentedBy.fullName %></h6>
        <pre class="ms-5"><%= comment.content %></pre>
        </div>
    <% }) %>




    <%- include("./partials/scripts") %>
</body>
</html>
 